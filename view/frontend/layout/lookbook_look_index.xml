<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src='MagentoEse_LookBook/css/lib/owl.carousel.min.css'/>
        <css src='MagentoEse_LookBook/css/lib/owl.theme.default.min.css'/>
        <css src="mage/gallery/gallery.css"/>
    </head>
    <body>
        <referenceBlock name="breadcrumbs" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="category.image" remove="true"/>
        <referenceBlock name="category.description" remove="true"/>
        <referenceBlock name="category.cms" remove="true"/>
        <referenceBlock name="rss.link" remove="true"/>

        <referenceContainer name="page.wrapper" htmlClass="page-wrapper lookbook-wrapper"/>
        <referenceContainer name="content">
            <block name="lookbook" class="MagentoEse\LookBook\Block\LookBook" />
        </referenceContainer>
    </body>
</page>
